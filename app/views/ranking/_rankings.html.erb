<% content_for :head do %>
<title><%= @type %> - ランキング</title>
<meta name="description" content="<%= @type %>のランキングページ。<%= @type %>数の多いものから１０件のモノを表示しています">
<% end %>

<% @rankings.each.with_index(1) do |(item,count), rank | %>
    <div id="item-<%= rank %>" class="ranking-items" >
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <h1>No.<%= rank %>:<%= item.title %></h1>
          <h2>
          <% if type = "have" %>
            Have:<%= count %>
          <% else %>
            Want:<%= count %>
          <% end %>
          </h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <% if item.large_image.present? %>
            <%= link_to(image_tag(item.large_image, class: "img-rounded", alt: item.title ), item) %>
          <% else %>
            <%= image_tag("no-image.png" , alt: item.title) %>
          <% end %>
        </div>
      </div>
    </div>
<% end %>