<% content_for :head do %>
<title>ログイン - Monolist</title>
<meta name="description" content="ログインページです。ログインに必要な情報を入力してMomolistをはじめましょう！">
<% end %>

<div class="box">
  <h2 class="box-title">ログイン</h2>
  <div class="box-inner">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
      </div>
      <div class="submit-group">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>